<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Driving" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:itemBackground">@color/colorazulfondo</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <!-- Status bar color.-->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimary</item>
        <!-- Customize your theme here. -->

    </style>
    <!--Estilo del dialogo bottom-->
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
            </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>

    </style>
    <!--////////////////////////////////////////////-->
    <style name="Theme.Driving.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="EditTextColor" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorHint">@color/gris </item>
        <item name="android:textColorPrimary">@color/gris </item>
        <item name="colorAccent">@color/white </item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>
    <style name="Theme.Driving.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Driving.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


<!--#6200EE    #3700B3 -->
</resources>