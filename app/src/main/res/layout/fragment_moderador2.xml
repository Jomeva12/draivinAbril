<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorazulfondo"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.activities.FragmentModerador2">
    <com.google.android.gms.ads.AdView
        android:id="@+id/fragmenttwoModeradorAds"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_gravity="bottom"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/fui_transparent"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-1498245539124562/3948585349"/>
    <ImageView
        android:id="@+id/cerrarMensajeM"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:elevation="10dp"
        android:src="@drawable/x" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardMensajeM"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#faf284"
        android:elevation="10dp"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gris"
                android:text="Édita si consideras necesario la información publicada en este módulo, pronto actualizaremos según las recomendaciones de los usuarios"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:elevation="10dp"
            app:cardCornerRadius="20dp">
            <!--Pico y placa-->
            <LinearLayout
                android:id="@+id/picoYPlacaLinear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#4CAF50"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        android:text="Día"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Taxis"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Particular"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Motos"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="Lunes"
                        android:textStyle="bold" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:elevation="5dp"
                        android:gravity="end"
                        app:cardBackgroundColor="#FFEB3B"
                        app:cardCornerRadius="5dp"
                        app:civ_border_color="#CC0909"
                        app:strokeColor="@color/fullBlack"
                        app:strokeWidth="2dp">

                        <EditText
                            android:id="@+id/edit_lunes_taxi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/gris"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        app:cardBackgroundColor="#FFEB3B"
                        app:cardCornerRadius="5dp"
                        app:civ_border_color="#CC0909"
                        app:strokeColor="@color/fullBlack"
                        app:strokeWidth="2dp">

                        <EditText
                            android:id="@+id/edit_lunes_particular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:textColor="@color/gris"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:gravity="end"
                        app:cardBackgroundColor="#FFEB3B"
                        app:cardCornerRadius="5dp"
                        app:civ_border_color="#CC0909"
                        app:strokeColor="@color/fullBlack"
                        app:strokeWidth="2dp">

                        <EditText
                            android:id="@+id/edit_lunes_motos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/gris"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="Martes"
                        android:textStyle="bold" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:gravity="end"
                        app:cardBackgroundColor="#FFEB3B"
                        app:cardCornerRadius="5dp"
                        app:civ_border_color="#CC0909"
                        app:strokeColor="@color/fullBlack"
                        app:strokeWidth="2dp">

                        <EditText
                            android:id="@+id/edit_martes_taxi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:textColor="@color/gris"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        app:cardBackgroundColor="#FFEB3B"
                        app:cardCornerRadius="5dp"
                        app:civ_border_color="#CC0909"
                        app:strokeColor="@color/fullBlack"
                        app:strokeWidth="2dp">

                        <EditText
                            android:id="@+id/edit_martes_particular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:textColor="@color/gris"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:gravity="end"
                        app:cardBackgroundColor="#FFEB3B"
                        app:cardCornerRadius="5dp"
                        app:civ_border_color="#CC0909"
                        app:strokeColor="@color/fullBlack"
                        app:strokeWidth="2dp">

                        <EditText
                            android:id="@+id/edit_martes_motos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:textColor="@color/gris"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="Miércoles"
                        android:textStyle="bold" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:gravity="end"
                        app:cardBackgroundColor="#FFEB3B"
                        app:cardCornerRadius="5dp"
                        app:civ_border_color="#CC0909"
                        app:strokeColor="@color/fullBlack"
                        app:strokeWidth="2dp">

                        <EditText
                            android:id="@+id/edit_miercoles_taxis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:textColor="@color/gris"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        app:cardBackgroundColor="#FFEB3B"
                        app:cardCornerRadius="5dp"
                        app:civ_border_color="#CC0909"
                        app:strokeColor="@color/fullBlack"
                        app:strokeWidth="2dp">

                        <EditText
                            android:id="@+id/edit_miercoles_particular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:textColor="@color/gris"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:gravity="end"
                        app:cardBackgroundColor="#FFEB3B"
                        app:cardCornerRadius="5dp"
                        app:civ_border_color="#CC0909"
                        app:strokeColor="@color/fullBlack"
                        app:strokeWidth="2dp">

                        <EditText
                            android:id="@+id/edit_miercoles_motos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:textColor="@color/gris"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="Jueves"
                        android:textStyle="bold" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:gravity="end"
                        app:cardBackgroundColor="#FFEB3B"
                        app:cardCornerRadius="5dp"
                        app:civ_border_color="#CC0909"
                        app:strokeColor="@color/fullBlack"
                        app:strokeWidth="2dp">

                        <EditText
                            android:id="@+id/edit_jueves_taxis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:textColor="@color/gris"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        app:cardBackgroundColor="#FFEB3B"
                        app:cardCornerRadius="5dp"
                        app:civ_border_color="#CC0909"
                        app:strokeColor="@color/fullBlack"
                        app:strokeWidth="2dp">

                        <EditText
                            android:id="@+id/edit_jueves_particular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text=""
                            android:textColor="@color/gris"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:gravity="end"
                        app:cardBackgroundColor="#FFEB3B"
                        app:cardCornerRadius="5dp"
                        app:civ_border_color="#CC0909"
                        app:strokeColor="@color/fullBlack"
                        app:strokeWidth="2dp">

                        <EditText
                            android:id="@+id/edit_jueves_motos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:textColor="@color/gris"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="Viernes"
                        android:textStyle="bold" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:gravity="end"
                        app:cardBackgroundColor="#FFEB3B"
                        app:cardCornerRadius="5dp"
                        app:civ_border_color="#CC0909"
                        app:strokeColor="@color/fullBlack"
                        app:strokeWidth="2dp">

                        <EditText
                            android:id="@+id/edit_viernes_taxis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:textColor="@color/gris"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        app:cardBackgroundColor="#FFEB3B"
                        app:cardCornerRadius="5dp"
                        app:civ_border_color="#CC0909"
                        app:strokeColor="@color/fullBlack"
                        app:strokeWidth="2dp">

                        <EditText
                            android:id="@+id/edit_viernes_particular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:textColor="@color/gris"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:gravity="end"
                        app:cardBackgroundColor="#FFEB3B"
                        app:cardCornerRadius="5dp"
                        app:civ_border_color="#CC0909"
                        app:strokeColor="@color/fullBlack"
                        app:strokeWidth="2dp">

                        <EditText
                            android:id="@+id/edit_viernes_motos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/gris"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
        <Button
            android:id="@+id/btnActualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_azul_redondo"
            android:text="Actualizar"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:layout_gravity="center|bottom"
            app:backgroundTint="@color/colorPrimary2" />
    </LinearLayout>



</FrameLayout>