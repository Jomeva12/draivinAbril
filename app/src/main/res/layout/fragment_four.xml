<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.activities.FragmentFour"
    android:background="@color/colorazulfondo">
    <com.google.android.gms.ads.AdView
        android:id="@+id/cuadro_propina_mapa"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_gravity="bottom"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-1498245539124562/7562433276"
        />
    <!-- TODO: Update blank fragment layout -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reciclerViewPropinas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.appBarLayout$ScrollingViewBehavior"
        />



    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/btnPropinas"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="start"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="-8dp"
        android:clickable="true"
        android:background="@android:color/transparent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="btn_json.json"
        app:lottie_imageAssetsFolder="assets"
        app:lottie_loop="true" >

    </com.airbnb.lottie.LottieAnimationView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:text="+"
        android:layout_marginStart="26dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="30dp" />

</FrameLayout>