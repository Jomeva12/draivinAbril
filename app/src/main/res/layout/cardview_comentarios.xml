<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="25dp"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:id="@+id/linearComentario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imagenComentario"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_person_24_gray"
            app:civ_circle_background_color="@color/colorPrimary" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:padding="5dp"
            android:background="#2F4977"
            app:cardCornerRadius="10dp"
            android:elevation="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
                    android:id="@+id/nombreComentario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Nombre"
                    android:background="#2F4977"
                    android:textColor="@color/white"
                    android:textSize="11dp"
                    android:textStyle="bold" />
<!-- <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView-->
                <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
                    android:id="@+id/descripcionComentario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:padding="5dp"
                    android:background="#2F4977"
                    android:text="Comentario dsad  dsa dsds dsd assd asdasdas asdasfdgffdg df gd"
                    emojicon:emojiconSize="20sp"
                    android:textColor="@color/white"
                    android:textSize="13dp" />



            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</FrameLayout>