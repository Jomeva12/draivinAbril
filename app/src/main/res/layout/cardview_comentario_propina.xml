<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imagenComentario"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_person_24_gray"
                app:civ_circle_background_color="@color/colorPrimary" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardGanador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"

                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:id="@+id/colorTarjeta1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/colorComentario"
                    android:orientation="vertical">


                    <!--hani.momanii.supernova_emoji_library.Helper.Emojicon-->
                  <LinearLayout
                      android:id="@+id/colorTarjeta2"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:background="@color/colorComentario"
                      android:orientation="horizontal">
<!--  <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView-->
                      <TextView
                          android:id="@+id/nombreComentario"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:paddingLeft="5dp"
                          android:paddingRight="5dp"
                          android:text="Nombre del usuario"
                          android:background="@color/colorComentario"
                          android:textColor="@color/white"
                          android:textSize="11dp"
                          android:textStyle="bold" />


                      <androidx.cardview.widget.CardView
                          android:id="@+id/btnEntregarPropinas"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          app:cardCornerRadius="5dp"
                          android:layout_marginLeft="15dp"
                          android:clickable="true"
                          android:layout_marginRight="10dp"
                          app:cardBackgroundColor="@color/colorAcent">
                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Entregar"
                              android:textSize="11dp"
                              android:textColor="@color/white"
                              android:backgroundTint="@color/colorAcent"/>
                      </androidx.cardview.widget.CardView>
                  </LinearLayout>

                    <TextView
                            android:id="@+id/descripcionComentario"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                        android:background="@color/colorComentario"
                            android:text="Comentario dsadasfdgffdg dasdasdasasda xx"
                            emojicon:emojiconSize="20sp"
                            android:textColor="@color/white"
                            android:textSize="13dp" />








                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>


</FrameLayout>