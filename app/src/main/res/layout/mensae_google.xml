<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/white"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@drawable/degradado_derecho">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:src="@drawable/logo_largo_sin_fondo"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieAnimationViewModoAlerta"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_gravity="center|start"
                app:lottie_autoPlay="true"
                android:layout_marginStart="10dp"
                app:lottie_fileName="google.json"
                app:lottie_imageAssetsFolder="assets"
                app:lottie_loop="true"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/textVie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="No es posible iniciar sesiÃ³n con la cuenta de Google en este momento, nos encontramos en mantenimiento."
                android:textColor="@color/colorPrimaryText"
                android:textSize="19dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/afirmativo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/boton_redondo"
                android:text="Aceptar"
                android:textColor="@color/white"
                app:backgroundTint="@color/colorPrimary2" />


        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
